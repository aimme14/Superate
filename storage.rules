rules_version = '2';
// Reglas de Firebase Storage.
// Para restricción por rol admin en AI_Tools_icons, configurar custom claim (ej. admin: true) y usar request.auth.token.admin == true en write.
service firebase.storage {
  match /b/{bucket}/o {
    // Iconos del Centro de Herramientas IA: AI_Tools_icons/{toolId}/icon.{ext}
    match /AI_Tools_icons/{toolId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 1 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }
    // Imágenes del banco de preguntas (existente)
    match /questions/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    match /test/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    // Simulacros: PDFs (documento + hoja respuestas) y videos explicativos
    // Simulacros/{simulacroId}/documento.pdf | hoja_respuestas.pdf | videos/{videoId}_*
    match /Simulacros/{simulacroId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && (request.resource == null
          || (request.resource.size < 50 * 1024 * 1024
            && request.resource.contentType.matches('application/pdf'))
          || (request.resource.size < 500 * 1024 * 1024
            && request.resource.contentType.matches('video/.*')));
    }
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
